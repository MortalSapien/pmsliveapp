<%- include('header'); %>

<div class="container"><br>

    <% if(msg.length != '' ) { %>
    <div class="alert <%= msgclass %> alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>

    <h2>Add new password category</h2>

    <form class="form" action="/add-password-category" method="POST">
        <div class="form-group">
            <label>Password Category</label>
            <input type="text" class="form-control" name="category" placeholder="Enter Password Category" required>
            <% if(errors != '') { %>
            <div class="text-danger">
                <%= errors.category.msg %>
            </div>
            <% } %>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" name="addCategory" value="Add Category">
        </div>
    </form>
</div>

<%- include('footer'); %>