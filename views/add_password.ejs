<%- include('header'); %>

<div class="container"><br>

    <% if(msg.length != '' ) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>

    <h2>Add new password</h2>

    <form class="form" method="POST" action="/add-password">

        <div class="form-group">
            <label>Select Password Category</label>
            <select class="form-control" name="category">
                <option value="">Choose Category</option>
                <% if (records.length > 0) { 
                        records.forEach(function(row) { %>
                <option value="<%= row.category %>"><%= row.category %></option>
                <% }); } %>
            </select>
        </div>

        <div class="form-group">
            <label>Enter Password Details</label>
            <textarea name="password_detail" class="form-control" cols="20" rows="5"
                placeholder="Enter Password Details"></textarea>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Add Password">
        </div>
    </form>
</div>

<%- include('footer'); %>